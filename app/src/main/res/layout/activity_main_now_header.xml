<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_margin="20dp"
        android:layout_toStartOf="@+id/current_weather_image_view"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/now_header" />

        <TextView
            android:id="@+id/current_weather_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Sunny" />

        <TextView
            android:id="@+id/current_temperature_text_view"
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="80Â° F" />
    </LinearLayout>

    <ImageView
        android:id="@+id/current_weather_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:importantForAccessibility="no"
        tools:src="@tools:sample/avatars" />
</RelativeLayout>